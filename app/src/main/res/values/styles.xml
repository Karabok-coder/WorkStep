<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="backArrow">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_gravity">center|start</item>
        <item name="android:src">@drawable/arrow_back</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="textTopLay" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">right</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="textChatName" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">right</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="inputCodeElem" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_gravity">fill</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="topLayInside">

    </style>

    <style name="inputCodeField">
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="hintEnabled">false</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="textEmptyList">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>